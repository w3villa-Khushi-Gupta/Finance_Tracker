<h1> User Details </h1>

<div class="row mt-3">
    <div class="col-md-9">
        <div class="card ">
                <div class="card-body">
                    <strong>Name: </strong><%= @user.full_name%>
                    <strong>Email: </strong><%= @user.email%>
                    <%if current_user.not_friends_with?(@user.id)%>
                        <%= link_to "Follow", friendship_index_path(user_id: current_user.id, friend_id: @user.id ),class: "btn btn-sm btn-success" , method: :post%>
                    <% else %>
                        <%= link_to "Unfollow", friendship_path(@user.id), method: :delete, class:"btn btn-sm btn-warning", data: {confirm: "Are you sure?"} %>
                    <%end%>
                </div>
        </div>
    </div>
</div>


<% if !@user_stocks.empty? %>
    <%= render 'stocks/list' %>
<% else%>
    <p class="mt-3"> <b><em>THIS USER IS NOT TRACKING ANY STOCKS <em> :(<b></p>
<%end%>